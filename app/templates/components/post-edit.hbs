{{#paper-card}}
  {{#paper-card-content}}
  <h2>Edit Post</h2>
  {{paper-divider}}

  {{paper-input label="Author" value=model.author}}
  {{paper-input label="Title" value=model.title}}
  {{paper-input label="Image URL" value=model.image_url}}
  {{paper-input textarea=true label="Content" value=model.content attr-spellcheck="true"
  event-enter=(action "updateCurrentContent")}}
  {{#paper-button raised=true action="editPost" param=model}}Edit Post{{/paper-button}}
  {{/paper-card-content}}
{{/paper-card}}

{{#paper-card}}
  {{#paper-card-content}}

    <h2>Markdown Preview</h2>
    {{paper-divider}}
    {{markdown-to-html markdown=currentContent}}

  {{/paper-card-content}}
{{/paper-card}}
