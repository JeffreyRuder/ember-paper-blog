{{#paper-card}}
  {{#paper-card-content}}
  <div class="new-post-input">
    <h2>New Post</h2>
    {{paper-divider}}

    {{paper-input label="Author" value=author}}
    {{paper-input label="Title" value=title}}
    {{paper-input label="Image URL" value=image_url}}
    {{paper-input textarea=true label="Content" value=content attr-spellcheck="true"
    event-enter=(action "updateCurrentContent")}}
    {{#paper-button raised=true action="savePost"}}Save Post{{/paper-button}}
  </div>
  {{/paper-card-content}}
{{/paper-card}}

{{#paper-card}}
  {{#paper-card-content}}

    <h2>Markdown Preview</h2>
    {{paper-divider}}
    {{markdown-to-html markdown=currentContent}}

  {{/paper-card-content}}
{{/paper-card}}
