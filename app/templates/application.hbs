{{#paper-nav-container}}
  {{#paper-sidenav class="md-sidenav-left md-whiteframe-z2" locked-open="gt-sm"}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          <!-- <img src="ember-logo-white-955db9d87b940bf54a17bd1fa78d0713.png" height="30"/> -->
          <strong>Paper</strong>
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#paper-item action="transitionTo" param="about"}}{{paper-icon "info-outline" class="icons"}}About{{/paper-item}}
        {{#paper-item action="transitionTo" param="contact"}}{{paper-icon "email" class="icons"}}Contact{{/paper-item}}
        {{paper-divider}}
        {{#paper-item action="transitionTo" param="post-new"}}{{paper-icon "add-circle-outline" class="icons"}}New Post{{/paper-item}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        {{#paper-sidenav-toggle as |toggle|}}
          {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
        {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">Title</span>
      </div>
    {{/paper-toolbar}}

    {{#paper-content class="md-padding"}}
      <div class="doc-content">
        {{outlet}}
      </div>
    {{/paper-content}}
  </div>
{{/paper-nav-container}}
